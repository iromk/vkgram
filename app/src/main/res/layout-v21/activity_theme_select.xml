<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeSelectActivity">

    <include layout="@layout/toolbar_main" />

    <Button
        android:id="@+id/btn_indigo"
        android:layout_width="205dp"
        android:layout_height="104dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_indigo"
        android:onClick="onButtonClick"
        android:text="@string/theme_select_indigo_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_greengo"
        android:layout_width="205dp"
        android:layout_height="104dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:text="@string/theme_select_greengo_button"
        android:onClick="onButtonClick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_indigo"
        android:background="@drawable/button_greengo"/>


</android.support.constraint.ConstraintLayout>